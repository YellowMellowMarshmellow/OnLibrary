<div class="mx-5 p-4">
  <h2>What book are you searching?</h2>
  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Type in book title, author name, book genre etc." aria-label="Search Keywords" aria-describedby="basic-addon2">
    <div class="input-group-append">
      <button class="btn btn-outline-secondary" type="button">Search</button>
    </div>
  </div>
</div>

<div id="books">
<h2>This is our fine collection of books</h2>
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

