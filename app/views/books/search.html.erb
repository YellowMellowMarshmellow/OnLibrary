<h2>Search results</h2>

<% if @books.any? %>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-3">
        <div class="card mb-3">
          <% if book.image.attached? %>
            <%= image_tag book.image, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><%= book.author %></p>
            <p class="card-text"><%= book.categories %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No books found for '<%= params[:query] %>'</p>
<% end %>
